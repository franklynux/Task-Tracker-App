{
    "family": "Task-Tracker-App",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "536697239284.dkr.ecr.us-east-1.amazonaws.com/dev/task-tracker-app-backend:latest",
            "cpu": 512,
            "memory": 1024,
            "memoryReservation": 512,
            "portMappings": [
                {
                    "name": "backend-container-port",
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "development"
                },
                {
                    "name": "MONGODB_URI",
                    "value": "mongodb+srv://franklynux:admin123@testcluster.40akg.mongodb.net/"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Task-Tracker-App",
                    "mode": "non-blocking",
                    "awslogs-create-group": "true",
                    "max-buffer-size": "25m",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:3000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            },
            "systemControls": []
        },
        {
            "name": "frontend",
            "image": "536697239284.dkr.ecr.us-east-1.amazonaws.com/dev/task-tracker-app-frontend",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "name": "frontend-container-port",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "REACT_APP_API_URL",
                    "value": "http://backend:3000"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "backend",
                    "condition": "START"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Task-Tracker-App",
                    "mode": "non-blocking",
                    "awslogs-create-group": "true",
                    "max-buffer-size": "25m",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "prometheus",
            "image": "prom/prometheus:latest",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 9090,
                    "hostPort": 9090,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "prometheus-data",
                    "containerPath": "/prometheus"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Task-Tracker-App",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "prometheus"
                }
            }
        },
        {
            "name": "grafana",
            "image": "grafana/grafana:latest",
            "user": "472",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "grafana-data",
                    "containerPath": "/var/lib/grafana"
                }
            ],
            "environment": [
                {
                    "name": "GF_SECURITY_ADMIN_USER",
                    "value": "franklynux"
                },
                {
                    "name": "GF_SECURITY_ADMIN_PASSWORD",
                    "value": "admin123"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Task-Tracker-App",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "grafana"
                }
            },
            "linuxParameters": {
                "tmpfs": [
                    {
                        "containerPath": "/var/lib/grafana",
                        "size": 512,
                        "mountOptions": [
                            "rw",
                            "nosuid",
                            "nodev"
                        ]
                    }
                ]
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::536697239284:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [
        {
            "name": "prometheus-data"
        },
        {
            "name": "grafana-data",
            "host": {
                "sourcePath": "/tmp/grafana-data"
            }
        }
    ],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "2048",
    "memory": "4096",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "tags": [
        {
            "key": "Environment",
            "value": "Development"
        }
    ]
}